{
  "name": "workflow-edu",
  "version": "1.0.0",
  "description": "Site for teachers to compare and discover the best learning/working Workflows",
  "main": "index.js",
  "scripts": {
    "prestart": "yarn build:tw",
    "start": "netlify dev",
    "build": "yarn build:gatsby",
    "build:gatsby": "gatsby build",
    "build:tw": "tailwind build src/styles.css -o public/styles.css",
    "postbuild:css": "purgecss -c purgecss.config.js -o public",
    "postinstall": "netlify-lambda install",
    "lint": "xo src",
    "format": "xo src --fix"
  },
  "keywords": [
    "netlify",
    "lambda",
    "gatsby"
  ],
  "author": "Liam Hession",
  "license": "MIT",
  "dependencies": {
    "@reach/dialog": "^0.10.3",
    "@reach/router": "^1.3.3",
    "@reach/tabs": "^0.10.3",
    "@reach/visually-hidden": "^0.10.2",
    "gatsby": "^2.23.3",
    "gatsby-plugin-netlify-identity": "^0.0.3",
    "gatsby-plugin-postcss": "^2.3.4",
    "netlify-lambda": "^1.6.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-netlify-identity-widget": "^0.2.7"
  },
  "devDependencies": {
    "netlify-cli": "^2.53.0",
    "purgecss": "^2.2.1",
    "tailwindcss": "^1.4.6",
    "xo": "^0.32.0"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "camelcase": 0
    }
  }
}
